import('sprites/*')
import('helpers/svg-size')
@import 'helpers/variables'
@import 'helpers/mixins'
@import 'helpers/fonts'
@import 'helpers/optimize'

@import '../../node_modules/formstone/dist/css/navigation.css'
@import '../../node_modules/flexboxgrid/dist/flexboxgrid.css'
@import '../../node_modules/swiper/dist/css/swiper.css'



import('../blocks/**/*')


.numbers-list
	list-style: none
	margin-y: 10px
	counter-reset: list 0

	li
		margin-y: 10px

		&::before
			counter-increment: list
			content: counter(list) ". ";
			font-family: $GothamProMedium

.price-text
	margin-right: 5px
	font-family: $GothamProBold
	font-size: 30px
	line-height: 1.2
	color: #327fd6

.bold
	font-family: $GothamProBold

	&::after
		content: ' '

.page
	font-family: $GothamPro

.content
	margin-x: auto
	padding-x: 3%
	max-width: $contentSize
	height: 100%
	box-sizing: content-box

	&_indent_no
		padding-x: 0


.link
	color: #327fd6
	text-decoration: underline


html, body
	height: 100%

.fs-navigation-overlay-nav.fs-navigation-enabled
	padding: 0
