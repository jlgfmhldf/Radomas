import('sprites/*')
import('helpers/svg-size')
@import 'helpers/variables'
@import 'helpers/mixins'
@import 'helpers/fonts'
@import 'helpers/optimize'
@import 'helpers/grid.styl'

@import '../../node_modules/swiper/dist/css/swiper.css'
import('../blocks/**/*')

.numbers-list
	list-style: none
	margin-y: 10px
	counter-reset: list 0

	li
		margin-y: 10px

		&::before
			counter-increment: list
			content: counter(list) ". ";
			font-family: $GothamProMedium

.price-text
	margin-right: 5px
	font-family: $GothamProBold
	font-size: 30px
	line-height: 1.2
	color: #327fd6

.bold
	font-family: $GothamProBold

	&::after
		content: ' '

.page
	font-family: $GothamPro
	min-width 1171px + 80

*
	transition: .5s ease

.content
	margin: auto
	padding-x: 40px
	width: $contentSize
	height: 100%
	box-sizing: content-box

	&_indent_no
		padding-x: 0


.link
	color: #327fd6
	text-decoration: underline


html, body
	height: 100%
