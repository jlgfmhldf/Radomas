.header-menu
	size: 100% auto
	background-color: #3a3a3a


	&__mobile-btn
		display: block
		padding-top: 10px !important
		font-size: 20px
		color: #fff

		@media screen and (min-width: 1040px)
			display: none


	&__list
		height: 100%

		@media screen and (max-width: 1040px)
			display: none


	&__link
		position: relative
		margin-top: 15px
		margin-bottom: 15px
		padding-top: 5px
		padding-bottom: 5px
		display: inline-block
		font-family: $GothamProMedium
		font-size: 13px
		font-weight: 500
		line-height: 1.5
		color: rgba(255, 255, 255, .83)
		text-transform: uppercase
		text-decoration: none

		&_active,
		&:hover
			color: #ffc560

		// TODO hover, focus

	&__list-item
		position: relative

	&__list-item_submenu &__link::before
		display: none


	&__list-item_submenu &__link::after
		content: '\25BE';
		color: inherit
		font-size: 16px;
		line-height: 16px;
		padding-left: 8px;


	&__submenu
		width: 250px
		opacity: 0;
		visibility: hidden;
		position: absolute;
		top: 59px;
		left: 0;
		z-index: 9999;
		background-color: #3a3a3a
		transition: all .3s ease-in-out;
		box-shadow: 0 6px 16px 0 rgba(#3a3a3a 0.19)

	&__submenu-item
		position: relative
		//border-bottom: 1px solid #e8e8e8
		color: #1f1f1f
		font-family: $GothamPro

	&__list-item_submenu:hover > &__link
		color: #ffc560

	&__submenu-item_submenu > &__submenu-link::after
		content: '\25b6';
		position: absolute;
		right: 25px;
		top: 18px;
		font-size: 10px;
		transition: all .3s ease-in-out
		color: #d0d0d0




	&__submenu-link
		display: flex
		align-items center
		padding: 14px 33px 14px 24px
		transition: all .3s ease-in-out
		cursor: pointer
		font-size: 14px
		color: #fff
		text-decoration: none

		&:hover
			background #327fd6

		&:hover::after
			color: #fff


	&__submenu-item_submenu &__submenu
		transform: translateX(100%);
		top: 0;

		&::before
			display: none

	&__submenu-icon
		display: block
		flex-shrink 0
		size: 20px
		margin-right: 10px

	@media screen and (max-width: 1040px)

		&__list
			box-shadow: 0 6px 16px 0 rgba(#3a3a3a 0.9)
			padding: 0 !important

		&__list-item
			padding: 0 !important


		&__link
			width: 100%
			text-transform: none
			font-family: $GothamProBold
			font-size: 14px
			padding-x: 15%

		&__list-item_submenu > &__link::after
			content: '\25b6';
			position: absolute
			right: 10%;
			font-size: 10px;
			transition: all 0.3s ease-in-out

		&__submenu
			width: 100%
			position: static
			height: 0


		&__submenu-item &__submenu-link
			padding-left: 20%

		&__submenu-item &__submenu-item &__submenu-link
			padding-left: 25%

		&__submenu,
		&__submenu-item_submenu &__submenu
			transition-delay: 0ms
			transform: translateX(0);

		&__submenu_show
			visibility: visible
			opacity: 1
			height: auto

	@media screen and (min-width: 1041px)

		&__list-item:hover > &__submenu,
		&__submenu-item_submenu:hover &__submenu
			opacity: 1;
			visibility: visible;
			margin: 0;



.fs-navigation-overlay-nav.fs-navigation-enabled
	background-color: #3a3a3a
	padding: 5%
