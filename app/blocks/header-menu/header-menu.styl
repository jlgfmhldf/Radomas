.header-menu
	size: 100% 55px
	background-color: #3a3a3a

	&__list
		display: flex
		justify-content: space-between
		align-items: center
		height: 100%

	&__link
		margin-top: 9px
		padding-x: 12px
		padding-bottom: 7px
		display: block
		font-family: $GothamProMedium
		font-size: 13px
		font-weight: 500
		line-height: 1.5
		color: rgba(255, 255, 255, .83)
		text-transform: uppercase
		text-decoration: none
		border-bottom: 2px solid transparent
		transition: .5s ease

		&_active,
		&:hover
			border-color: #ffc560

