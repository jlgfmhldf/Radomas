include /../node_modules/bemto.jade/bemto
include /../node_modules/jade-injected/jade-injected
include ../page/page
include ../scripts/scripts
include ../header/header
include ../feedback-form/feedback-form
include ../footer/footer
include ../breadcrumbs/breadcrumbs
include ../aside-menu/aside-menu
include ../aside-form/aside-form
include ../main-content/main-content

doctype html
html(lang='ru')
	include ../head/head
	+page
		+header(
			getData('menu')
		)
		+e.breadcrumbs
			+breadcrumbs
		+e.content
			.content
				.row.between-xs
					+e.aside.col-md-3.col-sm-4.col-xs-12.last-xs.first-md.first-sm
						+e.aside-menu
							+aside-menu
						+e.aside-form
							+aside-form

						block aside
					+e.main.col-md-9.col-sm-8.col-xs-12
						block content

		+e.bottom
			+feedback-form
			+footer

		+e.popups
			block popup

		+scripts(['app.min.js'])
