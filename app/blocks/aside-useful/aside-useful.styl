.aside-useful
	padding: 20px
	display block
	border: solid 1px rgba(0, 1, 1, 0.07)
	background-image: url(../images/aside-useful-bg.png)
	background-repeat: no-repeat
	background-position: 139px bottom

	&__title
		margin-bottom: 5px
		display: block
		font-size: 22px
		font-family: $GothamProBold
		color: #333333

	&__text
		margin-bottom: 17px
		display: block
		font-family: $GothamProLight
		font-size: 14px
		color: #3a3a3a

	&__link
		margin-bottom: 20px
		display: block
		font-size: 15px
		color: #327fd6
		text-decoration: underline

