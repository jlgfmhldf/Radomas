.header-info
	display: block
	size: 100% auto
	background: #fafafa

	&__content
		display: flex
		justify-content: space-between
		align-items: center
		height: 100%

	&__info-item
		display: flex
		align-items: center
		padding-y: 10px

		&:last-child
			margin-right: 0

	&__info-icon
		size: 48px
		centerContent()
		background-color: #327fd6
		border-radius: 50%
		flex-shrink 0

		&::before
			content: ''
			display: block

		&_position::before
			sprite: $position

		&_phone::before
			sprite: $phone

	&__info-content
		margin-left: 14px
		text-align: left

	&__info-text
		display: block
		margin-bottom: 4px
		font-size: 16px
		line-height: 1.2
		color: #3a3a3a

	&__info-link
		font-size: 13px
		letter-spacing: -.3px
		color: #1661b7
		font-family: $GothamProLight
		// TODO подчеркивание

	&__info-bold
		font-family: $GothamProMedium
		font-size: 20px
		line-height: 1.24
		letter-spacing: -.2px
		text-align: left
		color: #3a3a3a

	&__logo
		padding-y: 10px
