.service-folding-info
	display block

	&__title
		margin-bottom: 7px
		display: block
		font-family: $GothamProMedium
		font-size: 16px
		color: #3b3b3b
		text-transform: uppercase

	&__fold-link
		font-size: 14px
		color: #327fd6
		text-decoration: underline

		&::after
			content: ''
			margin-left: 7px
			display: inline-block
			sprite $folding_trianlge

		&_hide::after
			transform rotate(180deg)

	&__folding-text
		margin-top: 18px
		display: block

	&__item
		margin-bottom: 38px

		&:last-child
			margin-bottom: 0


