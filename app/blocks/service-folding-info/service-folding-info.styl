.service-folding-info
	display block

	&__title
		margin-top: 8px
		margin-bottom: 7px
		display: block
		font-family: $GothamProMedium
		font-size: 16px
		color: #3b3b3b
		text-transform: uppercase

	&__fold-link
		margin-bottom: 18px
		display: block
		font-size: 14px
		color: #327fd6
		text-decoration: underline
		cursor: pointer

		&::after
			content: ''
			margin-left: 7px
			display: inline-block
			sprite $folding_trianlge

		&_show::after
			transform rotate(180deg)

	&__folding-text
		height: 0
		overflow: hidden

		&_show
			height: auto

	&__item
		margin-bottom: 25px

		&:last-child
			margin-bottom: 0


