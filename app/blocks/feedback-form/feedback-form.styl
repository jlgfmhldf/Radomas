.feedback-form
	padding-top: 67px
	display block
	height: 570px
	background-image: url(../images/feedback-form-bg.jpg)
	background-size: cover

	&__title
		margin-bottom: 12px
		display: block
		font-family: $GothamProBold
		font-size: 37px
		letter-spacing: -.9px
		color: #fff
		text-transform: uppercase

	&__text
		font-size: 23.3px
		letter-spacing: -.6px
		color: #fff

	&__small-text
		margin-top: 30px
		margin-bottom: 15px
		display: block
		font-size: 14px
		letter-spacing: -0.3px
		color: #fff
		text-transform: uppercase

	&__phone
		margin-bottom: 11px
		display: block
		font-size: 36px
		letter-spacing: -.9px
		color: #fff
		text-decoration: none

	&__email
		font-size: 26px
		letter-spacing: -0.6px
		color: #fff

	&__form
		padding-x 30px
		padding-top: 30px
		padding-bottom: 20px
		background-color: #fafafa
		box-shadow: 0 6px 38px 0 rgba(15, 55, 104, 0.19)

	&__input-title
		margin-top: 7px
		margin-bottom: 12px
		display: block
		font-size: 17px
		letter-spacing: -.4px
		color: #1f1f1f

	&__form-row
		margin-bottom: 20px
