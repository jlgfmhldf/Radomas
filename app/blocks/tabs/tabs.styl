.tabs
	display block

	&__buttons-section
		display: flex
		width: 100%

	&__button
		padding: 5px
		text-align: center
		centerContent()
		width: 100%
		height: 58px
		border: solid 2px #ffc560
		background-color: #fff
		cursor: pointer
		color: rgba(58, 58, 58, 0.7)
		font-size: 16px
		font-family: $GothamPro
		transition: .5s ease

		&_active
			background-color: #ffc560
			color: rgba(51, 51, 51, 0.8)
			font-family: $GothamProMedium

		&-text
			transition: 0s ease
			transform: translateY(2px)

		&_active &-text
			transform: translateY(0px)

	&__tab-section
		margin-top: 32px

	&__tab
		display: none

		&_active
			display: block

