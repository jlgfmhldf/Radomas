.footer
	padding-top: 35px
	display block
	height: 194px
	background-color: #282828
	color: #fff

	&__copy-text
		margin-top: 32px
		font-size: 14px
		line-height: 1.5
		color: #fff

	&__yellow-link
		font-size: 14px
		line-height: 1.5
		color: #efce48
		text-decoration: underline

	&__link
		margin-bottom: 20px
		display: block
		font-size: 12px
		color: #fff
		text-decoration: none

	&__contact
		margin-bottom: 23px
		display: flex
		align-items: center
		font-size: 16px
		line-height: 1.12
		color: #fff
		background-repeat: no-repeat
		background-position 0 center

		&::before
			content: ''
			margin-right: 12px
			display: inline-block

		&_email::before
			sprite $footer_email

		&_phone::before
			sprite $footer_phone

		&_position::before
			sprite $footer_position

	&__social
		flex-basis: 12%;
		max-width: 12%;


	&__social-text
		display: block
		margin-bottom: 9px
		font-size: 14px
		color: #fff

	&__social-wrapper
		display: flex

	&__social-link
		centerContent()
		size: 38px
		border: solid 2px #fff
		border-radius: 50%
		background-repeat: no-repeat
		background-position: center
		margin-right: 7px

		&::before
			content: ''
			display: block

		&_vk::before
			sprite $vk

		&_fb::before
			sprite $fb

