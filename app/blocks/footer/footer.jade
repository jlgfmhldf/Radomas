include ../logo/logo

mixin footer()
	+b.footer&attributes(attributes)
		.content.row.between-xs
			.col-xs-3
				+logo({
					white: true,
				})
				+e.copy-text © 2012-2017 OOO "Радомас"
				+e('a').yellow-link Карта сайта

			.col-xs-1
				+e('a').link(href=jv0) Главная
				+e('a').link(href=jv0) О нас
				+e('a').link(href=jv0) Услуги
				+e('a').link(href=jv0) Цены

			.col-xs-1
				+e('a').link(href=jv0) Отзывы
				+e('a').link(href=jv0) F.A.Q.
				+e('a').link(href=jv0) Словарь
				+e('a').link(href=jv0) Контакты

			.col-xs-4
				+e('a').contact_phone +7 (495) 921-45-39,
				+e('a').contact_email info@radomas.ru
				+e.contact_position
					| г.Москва, Подсосенский переулок,
					br
					| д.28, стр.1


			+e.social
				+e.social-text Мы в соц.сетях:
				+e.social-wrapper
					+e('a').social-link_vk(href=jv0)
					+e('a').social-link_fb(href=jv0)
