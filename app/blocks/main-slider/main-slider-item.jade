include ../button/button

mixin main-slider-item()
	+e.item
		+e.slide-content
			.content
				+e.text-content
					+e.text Наши услуги:
						+e('h1').title
							+e('b').bold Регистрация
							br
							| юридических лиц!
						+e.text Квалифицированная помощь в регистрации юридических лиц различных организационно правовых форм.
						+e.icons-text-list
							+e.icons-text
								+e.icons-text-image(src='/assets/images/time.png')
								+e.icons-text-content
									| Работаем
									br
									| с 2004 года
							+e.icons-text
								+e.icons-text-image(src='assets/images/money.png')
								+e.icons-text-content
									| Делаем за твердую
									br
									| цену без доплат

						+e.buttons
							+e.button
								+button({
									color: 'blue',
									size: 'big'
								}) Подробнее

							+e.button
								+button({
									color: 'transparent',
									size: 'big'
								}) Сколько это стоит?


