.aside-menu
	padding-bottom: 10px
	display block
	background-color: #ffffff
	border: solid 1px rgba(0, 1, 1, 0.07)

	&__title
		padding-x: 20px
		font-family: $GothamProBold
		font-size: 20px
		font-weight: bold
		line-height: 1.05
		text-align: left
		color: #327fd6

	&__link
		padding-x: 20px
		padding-top: 10px
		display: inline-block
		font-size: 13px
		color: #5a5a5a
		text-decoration: underline

	&__menu-link
		padding-x: 20px
		padding-top: 8px
		padding-bottom: 6px
		display: block
		font-size: 13px
		color: #5a5a5a
		text-decoration: none
		transition: bottom 0s

		&_active,
		&:hover
			padding-left: 17px
			background-color: #ebebeb
			border-left: 3px solid #327fd6

	&__link-list
		margin-bottom: 20px

	&__title
		margin-top: 20px
