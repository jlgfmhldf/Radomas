.contacts
	display block

	&__contacts-block
		padding-y: 20px
		border-top: 1px solid #e8e8e8

	&__uppercase-text
		margin-bottom: 15px
		display: block
		font-size: 14px
		color: #3a3a3a
		text-transform: uppercase

	&__number
		margin-bottom: 17px
		display: block
		font-size: 24px
		font-family: $GothamProMedium
		color: #3a3a3a

	&__email-link
		font-size: 20px
		font-family: $GothamProMedium
		color: #3a3a3a
		text-decoration: underline

	&__address-text
		margin-bottom: 18px
		display: block
		font-size: 20px
		font-family: $GothamProMedium
		color: #3a3a3a

	&__location-map-link
		font-size: 14px
		font-family: $GothamProMedium
		color: #327fd6


	&__form
		border-left: 1px solid #e8e8e8
		padding-left: 20px
		padding-y: 20px

	&__form-title
		margin-bottom: 12px

	&__input
		margin-bottom: 20px

	&__form-bottom
		margin-top: 22px

	&__form-bottom-text
		margin-y: 10px
		width: 52%
		display: block
		font-size: 12px
		font-family: $GothamProLight
		line-height: 1.33
		color: rgba(51, 51, 51, 0.8)

	&__bold-text
		display: inline-block
		font-family: $GothamProMedium

	&__location-map-block
		margin-top: 56px

	&__location-map-title
		margin-y 18px
		display: block
		font-size: 18px
		font-family: $GothamProMedium
		color: #212737

	&__gray-text
		margin-top: 21px
		font-size: 14px
		font-family: $GothamProLight
		font-weight: 300
		line-height: 1.29
		text-align: left
		color: #7d7d7e


	&__map-img
		display: block
		width: 100%

