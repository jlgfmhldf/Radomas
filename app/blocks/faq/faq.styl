.faq
	display block


.faq-item
	margin-bottom: 10px

	&__question-link
		margin-bottom: 10px
		display: block
		font-size: 14px
		color: #333
		text-decoration: underline
		cursor: pointer

		&_open
			font-family: $GothamProMedium

	&__content
		display: none
		margin-top: 15px
		margin-left: 15px
		padding-left: 10px
		font-family: $GothamProLight
		font-size: 14px
		line-height: 1.3
		color: #333
		border-left: 3px solid #ffc560

		&_open
			display: block
